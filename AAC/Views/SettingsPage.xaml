<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Настройки"
             x:Class="AAC.Views.SettingsPage">
    <ContentPage.Content>
        <ScrollView VerticalOptions="Start" Padding="10">
            <TableView>
                <TableRoot>
                    <TableSection Title="Управление">
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label VerticalOptions="Center" Text="Минимальный период посещений" Padding="16, 0"/>
                                <TimePicker HorizontalOptions="FillAndExpand" VerticalOptions="Center" Time="{Binding MinPeriod}"/>
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>